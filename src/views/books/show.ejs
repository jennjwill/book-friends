<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %> <% include
    ../static/partials/messages.ejs %>

    <main class="container">
      <% if(currentUser && (currentUser.id == book.userId || currentUser &&
      currentUser.role === "admin")) { %>
      <div class="bookItems">
        <h1><%= book.title %></h1>
        <h3>Author: <%= book.author %></h3>
        <h3>UserId:<%= book.userId %></h3>
        <a href="/books/<%= book.id %>/edit" class="btn btn-warning">Edit</a>
        <form
          style="display:initial"
          action="/books/<%= book.id %>/destroy"
          method="post"
        >
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
